[bar/nekconfig]
;monitor = ${env:MONITOR:HDMI-1}
width = 100%
height = 29
;offset-x = 15
;offset-y = 15
;radius = 6.0
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00

;border-size = 10
;border-color = #00000000

padding-left = 0
padding-right = 2

module-margin-left = 1
module-margin-right = 3

font-0 = fixed:pixelsize=11;1
font-1 = unifont:fontformat=truetype:size=8:antialias=false;0
font-2 = siji:pixelsize=11;1
font-3 = FontAwesome:pixelsize=12;1
font-4 = "Font Awesome 5 Free:style=Regular:pixelsize=12;1"
font-5 = "Font Awesome 5 Free:style=Solid:pixelsize=12;1"
font-6 = "Font Awesome 5 Brands:pixelsize=12;1"

modules-left = i3 spotify title
modules-center = date 
modules-right =  volume backlight memory cpu battery powermenu

tray-position = left
tray-padding = 0
tray-offset-y = 0
tray-maxsize = 16
tray-transparent = false
tray-background = ${colors.background}

;wm-restack = bspwm
;wm-restack = i3

;override-redirect = true

;scroll-up = bspwm-desknext
;scroll-down = bspwm-deskprev

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

[module/bspwm]
type = internal/bspwm

label-focused = %index%
label-focused-background = ${colors.background}
label-focused-underline= ${colors.main-color1}
label-focused-padding = 4

label-occupied = %index%
label-occupied-background = ${colors.font1}
label-occupied-padding = 4

label-urgent = %index%!
label-urgent-background = ${colors.alert}
label-urgent-padding = 4

label-empty = %index%
label-empty-foreground = ${colors.foreground-alt}
label-empty-padding = 4


[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false
ws-icon-0 = "1; 一"
ws-icon-1 = "2; 二"
ws-icon-2 = "3; 三"
ws-icon-3 = "4; 四"
ws-icon-4 = "5; 五"
ws-icon-5 = "6; 六"
ws-icon-6 = "7; 七"
ws-icon-7 = "8; 八"
ws-icon-8 = "9; 九"
ws-icon-9 = "10; 十"
; Only show workspaces on the same output as the bar
;pin-workspaces = true

label-mode-padding = 4 
label-mode-foreground = #000
label-mode-background = ${colors.primary}
; focused = Active workspace on focused monitor


label-focused = %icon%
label-focused-foreground = ${colors.font1}
label-focused-background = ${module/bspwm.label-focused-background}
label-focused-underline = ${module/bspwm.label-focused-underline}
label-focused-padding = ${module/bspwm.label-focused-padding}


; unfocused = Inactive workspace on any monitor
label-unfocused = %icon%
label-unfocused-foreground = ${colors.font2}
;label-unfocused-background = ${colors.font2}
;label-unfocused-undeline = ${colors.background}
label-unfocused-padding = ${module/bspwm.label-occupied-padding}

; visible = Active workspace on unfocused monitor
label-visible = %icon%
label-visible-background = ${self.label-focused-background}
label-visible-underline = ${self.label-focused-underline}
label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent = %icon%
label-urgent-background = ${module/bspwm.label-urgent-background}
label-urgent-padding = ${module/bspwm.label-urgent-padding}

[module/title]
type = internal/xwindow

format = <label>
;format-background = #f00
format-foreground = ${colors.font1}
format-padding = 4

label = %title%
label-maxlen = 50

