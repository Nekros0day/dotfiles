[module/memory]
type = internal/memory
format = <label> <bar-used>
label = RAM
label-foreground = ${colors.font1}

bar-used-width = 15
bar-used-foreground-0 = ${colors.main-color1}
bar-used-foreground-1 = ${colors.main-color1}
bar-used-foreground-2 = ${colors.main-color2}
bar-used-foreground-3 = ${colors.main-color2}
bar-used-indicator =
bar-used-indicator-font = 6
bar-used-indicator-foreground = #ff
bar-used-fill = ─
bar-used-fill-font = 6
bar-used-empty = ─
bar-used-empty-font = 6
bar-used-empty-foreground = #a8a8a8

[module/wlan]
type = internal/network
interface = wlp4s0
interval = 3.0

format-connected = <label-connected>
;format-connected-underline = ${colors.font1}
label-connected = "  %essid%: %local_ip%"
label-connected-foreground = ${colors.font1} 

format-disconnected =
;format-disconnected = <label-disconnected>
;format-disconnected-underline = ${self.format-connected-underline}
;label-disconnected = %ifname% disconnected
;label-disconnected-foreground = ${colors.foreground-alt}

;ramp-signal-0 = 0
;ramp-signal-1 = 1
;ramp-signal-2 = 2
;ramp-signal-3 = 3
;ramp-signal-4 = 4
;ramp-signal-foreground = ${colors.font1}

[module/eth]
type = internal/network
interface = inet6
interval = 3.0

;format-connected-underline = #55aa55
format-connected-prefix = " "
format-connected-prefix-foreground = ${colors.foreground-alt}
label-connected = %local_ip%
label-connected-foreground = ${colors.font1}

format-disconnected =
;format-disconnected = <label-disconnected>
;format-disconnected-underline = ${self.format-connected-underline}
;label-disconnected = %ifname% disconnected
;label-disconnected-foreground = ${colors.foreground-alt}

[module/date]
type = internal/date
interval = 1

date =
date-alt = "  %A, %d %B %Y"

time = %H:%M
time-alt = %H:%M:%S

format-prefix = 
format-prefix-foreground = ${colors.foreground-alt}

label = %time%%date%
label-foreground = ${colors.font1}
label-underline = ${colors.main-color1}

[module/volume]
type = internal/volume

format-volume = <label-volume> <bar-volume>
label-volume = 
label-volume-foreground = ${colors.font1}

format-muted = <label-muted> <bar-volume>
label-muted = " "
format-muted-foreground = ${colors.foreground-alt}
;label-muted = sound muted

bar-volume-width = 15
bar-volume-foreground-0 = ${colors.main-color1} 
bar-volume-foreground-1 = ${colors.main-color1}
bar-volume-foreground-2 = ${colors.main-color1}
bar-volume-foreground-3 = ${colors.main-color1}
bar-volume-foreground-4 = ${colors.main-color1}
bar-volume-foreground-5 = ${colors.main-color2}
bar-volume-foreground-6 = ${colors.main-color2}
bar-volume-gradient = false
bar-volume-indicator = 
bar-volume-indicator-foreground = ${colors.font1}
bar-volume-indicator-font = 2
bar-volume-fill = ─
bar-volume-fill-font = 2
bar-volume-empty = ─
bar-volume-empty-font = 2
bar-volume-empty-foreground = #a8a8a8

[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 60

format = <ramp> <label>
format-underline = #00000000
format-warn = <ramp> <label-warn>
format-warn-underline = ${self.format-underline}

label = %temperature%
label-foreground = ${colors.font2}
label-warn = %temperature%
label-warn-foreground = ${colors.secondary}

ramp-0 = 
ramp-1 = 
ramp-2 = 2
ramp-foreground = ${colors.foreground-alt}


[module/battery]
type = internal/battery
battery = BAT1
adapter = ADP1
full-at = 98

format-charging = <animation-charging> <label-charging>
format-discharging = <ramp-capacity> <label-discharging>
format-foreground = ${colors.font2}
label-full =   %percentage%%
label-charging = %percentage%%
label-discharging = %percentage%%
label-full-foreground = ${colors.font2}
label-charging-foreground = ${colors.font2}
label-discharging-foreground = ${colors.font2}

ramp-capacity-0 =   
ramp-capacity-0-foreground = ${colors.alert}
ramp-capacity-1 =   
ramp-capacity-1-foreground = ${colors.alert}
ramp-capacity-2 =   
ramp-capacity-3 =   
ramp-capacity-4 =   
ramp-capacity-foreground = ${colors.font2}

animation-charging-0 =  
animation-charging-1 =  
animation-charging-2 =  
animation-charging-3 =  
animation-charging-4 =  
animation-charging-foreground = ${colors.font2}
animation-charging-framerate = 750

[module/spotify]
